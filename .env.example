# WalletConnect Project ID (get from https://cloud.walletconnect.com/)
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=your_project_id_here

# Smart Contract Address (deploy ProofAnchor.sol first)
NEXT_PUBLIC_PROOF_ANCHOR_ADDRESS=0x...deployed_contract_address

# App URL (for shareable links)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Chain Configuration
NEXT_PUBLIC_DEFAULT_CHAIN=114  # 14 for Flare Mainnet, 114 for Coston2 Testnet
